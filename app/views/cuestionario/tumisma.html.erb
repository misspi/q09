<%= render :partial => 'prevent.html' %>
<%= title t(:title), :show => false %>

<% content_for(:header) do %>
  <%=  javascript_include_tag 'ajaxupload.js' %>
<% end %>


<% form_for @survey do |form| %>
  <%= next_step cuestionario_path(:id => 'tumisma') %>

  <% if current_user %>
    <p class="submit">
      <%= form.submit "Guardar" %><span><%= t(:submit_info) %></span>
    </p>
  <% else %>
    <%= render 'preview' %>
  <% end %>

  <p>
    <%= form.label :birth, @survey.qt(:birth) %>
    <%= form.text_field :birth %>
  </p>

  <p>
    <%= form.label :gender, @survey.qt(:gender) %>
    <%= form.text_field :gender %>
  </p>

  <p>
    <%= form.label :since, @survey.qt(:since) %>
    <%= form.text_field :since %>
  </p>

  <p>
    <%= form.label :books, @survey.qt(:books) %>
    <%= form.text_area :books %>
  </p>

  <p>
    <%= form.label :films, @survey.qt(:films) %>
    <%= form.text_area :films %>
  </p>

  <p>
    <%= form.label :musics, @survey.qt(:musics) %>
    <%= form.text_area :musics %>
  </p>

  <p>
    <%= form.label :movements, @survey.qt(:movements) %>
    <%= form.text_area :movements %>
  </p>

  <p>
    <%= form.label :influences, @survey.qt(:influences) %>
    <%= form.text_area :influences %>
  </p>

  <p>
    <%= form.label :ilike, @survey.qt(:ilike) %>
    <%= form.text_area :ilike %>
  </p>

  <p>
    <%= form.label :dislike, @survey.qt(:dislike) %>
    <%= form.text_area :dislike %>
  </p>

  <p>
    <%= form.label :isdifferent, t(:isdifferent) %>
    <%= form.radio_button :isdifferent, :yes %><label class="radio"><%= t(:isdifferent_yes) %></label>
    <%= form.radio_button :isdifferent, :no %><label class="radio"><%= t(:isdifferent_no) %></label>
  </p>

  <p>
    <%= form.label :isdifferent_desc, @survey.qt(:isdifferent_desc) %>
    <%= form.text_area :isdifferent_desc %>
  </p>

  <p>
    <%= form.label :proj_good, @survey.qt(:proj_good) %>
    <%= form.text_area :proj_good %>
  </p>
  <p>
    <%= form.label :proj_good_att, @survey.qt(:proj_good_att) %>
    <%= form.text_field :proj_good_att, :id => 'upload_proj_good' %>
    <%= js_upload_file(@survey.proj_good_att, :id => 'upload_proj_good', :label => t('upload')) %>
  </p>

  <p>
    <%= form.label :proj_bad, @survey.qt(:proj_bad) %>
    <%= form.text_area :proj_bad %>
  </p>
  <p>
    <%= form.label :proj_bad_att, @survey.qt(:proj_bad_att) %>
    <%= form.text_field :proj_bad_att, :id => 'upload_proj_bad' %>
    <%= js_upload_file(@survey.proj_bad_att, :id => 'upload_proj_bad', :label => t('upload')) %>

  </p>

  <p>
    <%= form.label :diffusion, @survey.qt(:diffusion) %>
    <%= form.text_area :diffusion %>
  </p>

  <p>
    <%= form.label :traject_eval, t(:traject_eval) %>
    <table>
      <thead>
      </thead>
      <% Reu09.c(:tumisma, :traject_eval).each do |topic| %>
        <tr>
          <td><%= t(topic) %></td>
          <% Reu09::RELEVANCE.each do |relevance| %>
            <td class="<%= relevance %>">
              <%= form.radio_button "traject_eval_#{topic}", relevance %>
              <span class="tooltip"><%= t(relevance) %> </span>
            </td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </p>

  <p>
    <%= form.label :traject_eval_desc, @survey.qt(:traject_eval_desc) %>
    <%= form.text_area :traject_eval_desc %>
  </p>

  <p>
    <%= form.label :gender_influence, @survey.qt(:gender_influence) %>
    <%= form.radio_button :gender_influence, :yes %><label class="radio"><%= t(:gender_influence_yes) %></label>
    <%= form.radio_button :gender_influence, :no %><label class="radio"><%= t(:gender_influence_no) %></label>
  </p>

  <p>
    <%= form.label :gender_influence_desc, @survey.qt(:gender_influence_desc) %>
    <%= form.text_area :gender_influence_desc %>
  </p>

  <% if current_user %>
    <p class="submit bottom">
    <%= form.submit "Guardar" %><span><%= t(:submit_info) %></span>
  </p>
  <% end %>

<% end %>
