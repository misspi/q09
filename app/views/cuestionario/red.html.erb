<%= title t(:title) %>

<% form_for @survey do |form| %>

  <p>
    <%= form.label :computer, t(:computer) %>
    <%= form.radio_button :computer, :yes %><label class="radio"><%= t(:computer_yes) %></label>
    <%= form.radio_button :computer, :no %><label class="radio"><%= t(:computer_no) %></label>
  </p>

  <p>
    <%= form.label :operating, t(:operating) %>
    <% Reu09.c(:redes, :operating).each do |topic| %>
      <%= form.radio_button "operating", topic %>
      <%= t(topic) %>
    <% end %>
  </p>

    <p>
    <%= form.label :operating_desc, t(:operating_desc) %>
    <%= form.text_area :operating_desc %>
  </p>














  <p>
    <label>&nbsp;</label>
    <%= form.submit "Guardar" %>
  </p>
<% end %>